@using Espuchi.Core;
@model IEnumerable<Banda>
@{
    ViewData["Title"] = "Bandas";
}

<body>
    <table>
        <tbody>
            @foreach (Banda banda in Model)
            {
                <tr>
                    <td>
                        <a asp-controller="Album" asp-action="listas" asp-route-id="@banda.IdBanda">@banda.Nombre</a>
                        <p>@banda.Nombre</p>
                        <p>@banda.Fundacion</p>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
