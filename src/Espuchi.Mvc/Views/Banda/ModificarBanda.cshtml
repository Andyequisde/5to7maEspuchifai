@model Espuchi.Core.Banda;
@{
    ViewData["Title"] = "Home Page";
}
<form asp-action="ModificarBanda" method="post">
    <div asp-validation-summary="All"></div>
    <div><input type="hidden" asp-for="IdBanda" /></div>
    <div>
        <label asp-for="Nombre">Nombre: </label>
        <input asp-for="Nombre">
    </div>
    <div>
        <label asp-for="Fundacion">Fundacion: </label>
        <input asp-for="Fundacion">
    </div>
    <button type="submit" class="btn btn-primary">Modificar Banda</button>
</form>